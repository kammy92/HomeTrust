<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/activity_margin"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tvAddressFull"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_margin"
        android:text="9700 Meadow Ridge Lane"
        android:textColor="@color/app_text_color_dark"
        android:textSize="@dimen/text_size_medium"
        android:textStyle="bold"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
        android:id="@+id/llScheduleAppointment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardview1"

        android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_margin_small"
                android:text="@string/dialog_appointment_user"
                android:textColor="@color/app_text_color_light"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                android:gravity="top"
                android:textColorHint="@color/hint_text_color"
                android:textSize="@dimen/text_size_medium"/>

            <EditText
                android:id="@+id/etNumberOfUsers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                android:gravity="top"
                android:inputType="number"
                android:padding="@dimen/edittext_padding"
                android:textColorHint="@color/hint_text_color"
                android:textSize="@dimen/text_size_medium"
                android:visibility="gone"/>


            <LinearLayout
                android:id="@+id/ll3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin_small"
                    android:text="Person Name"
                    android:textColor="@color/app_text_color_light"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/etPerson"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_background"
                    android:gravity="top"
                    android:padding="@dimen/edittext_padding"
                    android:textColorHint="@color/hint_text_color"
                    android:textSize="@dimen/text_size_medium"/>

                <EditText
                    android:id="@+id/etAboutPerson"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin_small"
                    android:background="@drawable/edit_text_background"
                    android:hint="Why they would be helpful to have you join."
                    android:lines="1"
                    android:padding="@dimen/edittext_padding"
                    android:textColorHint="@color/hint_text_color"
                    android:textSize="@dimen/text_size_medium"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_margin_small"
                android:text="Lender Name"
                android:textColor="@color/app_text_color_light"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/etLenderName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                android:padding="@dimen/edittext_padding"
                android:textColorHint="@color/hint_text_color"
                android:textSize="@dimen/text_size_medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_margin_small"
            android:text="Do You Require Appraisal Access?"
            android:textColor="@color/app_text_color_light"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold"/>

            <EditText
                android:id="@+id/etAppraisalAccess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                android:padding="@dimen/edittext_padding"
                android:textColorHint="@color/hint_text_color"
                android:textSize="@dimen/text_size_medium"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_margin_small"
                android:text="@string/dialog_appointment_comment"
                android:textColor="@color/app_text_color_light"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"/>


            <EditText
                android:id="@+id/etComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                android:padding="@dimen/edittext_padding"
                android:textColorHint="@color/hint_text_color"
                android:textSize="@dimen/text_size_medium"/>
    </LinearLayout>

    </ScrollView>
</LinearLayout>